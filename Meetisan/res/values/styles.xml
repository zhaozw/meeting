<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="MainTabStyle">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@drawable/selector_radio_main_tab_bg</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="DialogTheme" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/activity_edittxt_height</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/border_square</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <!-- <item name="android:textCursorDrawable">@null</item> -->
        <item name="android:singleLine">true</item>
    </style>

    <style name="TagLabelStyle">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/tag_label_bg</item>
        <item name="android:padding">2dp</item>
        <item name="android:textSize">@dimen/text_size_min</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_btn_style</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">@dimen/text_size_middle</item>
        <item name="android:singleLine">true</item>
    </style>
    <!-- Search bar layout -->
    <style name="SearchLayout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@drawable/search_background</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="SearchLayout.Edit">
        <item name="android:autoText">false</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:drawableLeft">@drawable/search_icon_left</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:hint">@string/search_hint</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SearchLayout.ListView" parent="@android:style/Widget.ListView">
        <item name="android:scrollbars">none</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:listSelector">@drawable/search_list_view_selector</item>
        <item name="android:textStyle">bold</item>
        <item name="android:divider">@color/search_list_divider_color</item>
    </style>

    <style name="SearchLayout.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/search_button_selector</item>
        <item name="android:shadowColor">@color/button_title_shadow</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">-1.0</item>
        <item name="android:shadowRadius">2.0</item>
    </style>

    <!-- Navigation bar Right button -->
    <style name="SearchLayout.Button.Right">
        <item name="android:background">@drawable/search_button_right_selector</item>
    </style>

    <!-- Create Activity styles -->
    <style name="CreateActivityDividingLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/activity_create_dividing_line_color</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="CreateActivityItemSelected">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/activity_create_item_height</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:drawableRight">@drawable/selector_create_item_selected</item>
        <item name="android:button">@null</item>
    </style>

    <style name="AnimationBottomEnterTopExit">
        <item name="android:windowEnterAnimation">@anim/alpha_appear</item>
        <item name="android:windowExitAnimation">@anim/alpha_disappear</item>
    </style>

</resources>