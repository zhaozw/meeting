<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <include
        android:id="@+id/include_title"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/activity_title_height"
        layout="@layout/title_with_image_btn" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@android:color/white"
            android:orientation="vertical" >

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gap_line_color" />

            <com.meetisan.meetisan.widget.LabelWithIcon
                android:id="@+id/btn_notify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/notify_me_when" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gap_line_color" />

            <com.meetisan.meetisan.widget.LabelWithIcon
                android:id="@+id/btn_push"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/push_notifications" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gap_line_color" />

            <com.meetisan.meetisan.widget.LabelWithIcon
                android:id="@+id/btn_privacy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/privacy" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gap_line_color" />

            <com.meetisan.meetisan.widget.LabelWithIcon
                android:id="@+id/btn_blocked"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/blocked_people" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gap_line_color" />

            <com.meetisan.meetisan.widget.LabelWithIcon
                android:id="@+id/btn_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_meetisan" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gap_line_color" />

            <Button
                android:id="@+id/btn_logout"
                style="@style/RedButtonStyle"
                android:layout_marginTop="20dp"
                android:text="@string/logout" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>