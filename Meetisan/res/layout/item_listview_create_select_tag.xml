<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@android:color/white"
    android:descendantFocusability="blocksDescendants" >

    <!-- android:background="@drawable/selector_listview_bg" > -->

    <CheckBox
        android:id="@+id/cb_create_selected_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/selector_create_select_tag_check_box"
        android:button="@null"
        android:focusable="false" />

    <com.meetisan.meetisan.widget.CircleImageView
        xmlns:customized="http://schemas.android.com/apk/res-auto"
        android:id="@+id/iv_portrait"
        android:layout_width="55dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/cb_create_selected_tag"
        android:src="@drawable/portrait_person_default"
        customized:border_color="@android:color/white"
        customized:border_width="0dp" />

    <RelativeLayout
        android:id="@+id/item_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_toLeftOf="@+id/iv_right_arrow"
        android:layout_toRightOf="@id/iv_portrait"
        android:padding="5dp" >

        <TextView
            android:id="@+id/tv_create_select_tag_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_big" />

        <TextView
            android:id="@+id/tv_create_select_tag_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/tv_create_select_tag_name"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/text_size_small" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_create_select_tag_description"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_create_select_tag_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_people"
                android:text="@string/app_name"
                android:textColor="@android:color/darker_gray" />

            <TextView
                android:id="@+id/tv_create_select_tag_meetings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:drawableLeft="@drawable/icon_meetings"
                android:text="@string/app_name"
                android:textColor="@android:color/darker_gray" />
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_right_arrow"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:clickable="false"
        android:contentDescription="@string/app_name"
        android:gravity="center"
        android:scaleType="centerInside"
        android:src="@drawable/icon_right_arrow" />

</RelativeLayout>