<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white" >

    <include
        android:id="@+id/include_title"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/activity_title_height"
        layout="@layout/title_with_image_btn" />

    <com.meetisan.meetisan.widget.listview.refresh.DropDownListView
        xmlns:dropListView="http://schemas.android.com/apk/res/com.meetisan.meetisan"
        android:id="@+id/list_category_tags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include_title"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@color/gray"
        android:dividerHeight="0.5dp"
        android:drawSelectorOnTop="false"
        android:listSelector="@android:color/transparent"
        android:scrollbars="none"
        dropListView:isAutoLoadOnBottom="true"
        dropListView:isDropDownStyle="true"
        dropListView:isOnBottomStyle="true" />

</RelativeLayout>